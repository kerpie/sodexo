.row
  .col-md-5.col-sm-6.col-xs-12
    %h1.model-title
      Listado de Preguntas

.row
  .table-responsive.col-md-12.col-sm-12.col-xs-12
    %table.table.table-hover.table-condensed
      %thead
        %tr
          %th
            Nombre
          %th
            Articulo de referencia
          %th
            Sub categoría 
          %th
            Categoría
          %th{ colspan: "2" }
            Opciones
      %tbody
        - @questions.each do |question|
          %tr
            %td
              = link_to question.title, question
            %td
              = question.item
            %td
              = question.sub_category.name
            %td
              = question.sub_category.category.name              
            %td
              = link_to 'Editar', edit_question_path(question), class: "btn btn-warning btn-xs"
            %td
              = link_to 'Eliminar', question, method: :delete, data: { confirm: 'Este operación es irreversible ¿Está seguro de querer continuar?' }, class: "btn btn-danger btn-xs"

.row
  .col-md-6.col-md-offset-3.col-sm-12.col-xs-12
    = link_to 'Nueva pregunta', new_question_path, class: "btn btn-primary btn-block"