!!!DOCTYPE html
%html
	%head
		%title 
			Sodexo
		= stylesheet_link_tag    "application", media: "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		- if user_signed_in?
			= render 'layouts/navigation_bar'
			.container-fluid
				= yield 
		-else
			.container
				= yield
			:javascript
				$(document).ready(function(){
					$("body").attr("style", "background-color: #EEE;");
				});
		= yield :scripts