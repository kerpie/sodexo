.row
  .col-md-5.col-sm-6.col-xs-12
    %h1.model-title
      Listado de preguntas asociadas

.row
  .table-responsive.col-md-12.col-sm-12.col-xs-12
    %table.table.table-hover.table-condensed
      %thead
        %tr
          %th
            Nombre
          %th
            Local
          %th
            Sub categoría
          %th
            Categoría 
          %th{ colspan: "2" }
            Opciones
      %tbody
        - @availabilities.each do |availability|
          %tr
            %td
              = link_to availability.question.title, availability
            %td
              = availability.restaurant.name
            %td
              = availability.question.sub_category.name
            %td
              = availability.question.sub_category.category.name
            %td
              = link_to 'Editar', edit_availability_path(availability), class: "btn btn-warning btn-xs"
            %td
              = link_to 'Destruir', availability, method: :delete, data: { confirm: 'Esta operación es irreversible ¿Está seguro de querer continuar?' }, class: "btn btn-danger btn-xs"
      
.row
  .col-md-6.col-md-offset-3.col-sm-12.col-xs-12
    = link_to 'Registrar nueva disponibilidad', new_availability_path, class: "btn btn-primary btn-block"