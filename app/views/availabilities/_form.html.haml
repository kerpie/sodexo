.row
  .col-xs-12.col-sm-12.col-md-12
    = form_for(@availability, html: {class: "form-horizontal", role: :form}) do |f|
      - if @availability.errors.any?
        .error_explanation
          %h2
            Corrige los siguientes errores para continuar:
          %ul
            - @availability.errors.full_messages.each do |msg|
              %li
                = msg
      .form-group
        = f.label :question_id, "Pregunta: ", class: "col-md-2 control-label"
        .col-md-8
          = f.collection_select :question_id, Question.all, :id, :long_name, {}, class: "form-control"
      .form-group
        = f.label :restaurant_id, "Local: ", class: "col-md-2 control-label"
        .col-md-8
          = f.collection_select :restaurant_id, Restaurant.all, :id, :name, {}, class: "form-control"
      .form-group
        .col-md-6.col-md-offset-3
          = f.submit class: "btn btn-primary btn-block"