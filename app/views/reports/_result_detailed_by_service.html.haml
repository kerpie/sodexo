= form_tag result_detailed_by_service_path(format: "pdf"), class: "download_pdf" do
	= hidden_field_tag "restaurant_id", result[2][:restaurant]
	= hidden_field_tag "start_date_for_report", result[2][:start_date]
	= hidden_field_tag "end_date_for_report", result[2][:end_date]
	= submit_tag "Descargar resumen en pdf", class: "btn btn-primary btn-block"
.station.row.result_to_care
	.col-md-12.col-xs-12
		%h1
			= result[0].name
- result[1].each do |key, value|
	.station.row.result_to_care
		.col-md-12.col-xs-12
			.col-md-5.col-xs-12.left_part
				%h3{style: "text-align: right;"}
					= key.name
			.col-md-7.col-xs-12.right_part
				- total = value[:total]
				- yes = value[:yes]
				- no = value[:no]
				- unless total == 0
					- yes_width = yes*100/total
					- no_width = no*100/total
					.bar.positive_bar{ style: "width: #{yes_width}%;"}
						- unless yes == 0
							%p
								= "SI: #{yes} votos (#{yes_width}%)" 
						- else
							%p
					.bar.negative_bar{ style: "width: #{no_width}%;"}
						- unless no == 0
							%p
								= "NO: #{no} votos (#{no_width}%)"
						- else
							%p
				- else
					.bar.positive_bar{ style: "width: 0px;"}
					.bar.negative_bar{ style: "width: 0px;"}
		.clearfix.col-md-12.col-xs-12
= link_to "Imprimir documento", "javascript:window.print()", id: "print_button", class: "btn btn-block btn-primary"