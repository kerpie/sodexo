- if load_css
	= wicked_pdf_stylesheet_link_tag "print.css"
	%meta{http_equiv: "Content-Type", content: "text/html; charset=UTF-8" }
	.row.common-title
		.col-md-12
			%h1
				%span
					Reporte total de los comedores
				= wicked_pdf_image_tag "statistic.png"
	#new_logo.row
		= wicked_pdf_image_tag "long_logo.png"
#survey_form.row
	.col-md-2.col-md-offset-9
		= form_tag result_total_path(format: "pdf"), class: "download_pdf" do
			= hidden_field_tag "start_date", result[1][:start_date]
			= hidden_field_tag "end_date", result[1][:end_date]
			= submit_tag "Descargar reporte en pdf", class: "btn btn-default submit_pdf_button"
- result[0].each do |r|
	- if r[0]
		- total = r[2][:total]
		- yes = r[2][:yes]
		- no = r[2][:no]
		.station.row.result_to_care.juar
			.col-md-offset-1.col-md-3.col-sm-3.total
				%h5
					= r[1].name
			.col-md-2.col-sm-2.col-xs-12.no
				%h5
					= "Votos NO: #{no}"
			.col-md-2.col-sm-2.col-xs-12.yes
				%h5
					= "Votos SI: #{yes}"
			.col-md-2.col-sm-2.col-xs-12.total
				%h5
					= "Votos Totales: #{total}"
		.bar-values.station.row.result_to_care
			.col-md-offset-1.col-md-10
				- unless total == 0
					- yes_height = (yes*300/total)
					- no_height = (no*300/total)
					.col-md-offset-4.col-md-4
						.bar.col-md-4
							.col-md-offset-1.value.col-md-10
								%p.blue{style: "height: #{no_height}px;"}
									= no_height*100/300
									%br
									\%
							%h5.blue
								No
						.bar.col-md-4
							.col-md-offset-1.value.col-md-10
								%p.red{style: "height: #{yes_height}px;"}
									= yes_height*100/300
									%br
									\%
							%h5.red
								Si
				- else
					.col-md-offset-4.col-md-4
						.bar.col-md-4
							.col-md-offset-1.value.col-md-10
								%p.blue
									0
									%br
									\%
							%h5.blue
								No
						.bar.col-md-4
							.col-md-offset-1.value.col-md-10
								%p.red
									0
									%br
									\%
							%h5.red
								Si
			.clearfix.col-md-12.col-xs-12s
