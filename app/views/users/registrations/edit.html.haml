.row
  .col-xs-12.col-sm-12.col-md-12
    %h2
      Editar usuario

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "form-horizontal", role: "form"}) do |f|
      
      = devise_error_messages!

      .form-group
        = f.label :email, "Correo:", class: "col-md-2 control-label"
        .col-md-8
          = f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Correo"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Actualmente esperando confirmación de: 
          = resource.unconfirmed_email 

      .form-group
        = f.label :password, "Nueva contraseña (deje en blanco si no desea cambiarla)", class: "col-md-2 control-label"
        .col-md-8
          = f.password_field :password, :autocomplete => "off", placeholder: "Nueva Contraseña", class: "form-control"

      .form-group
        = f.label :password_confirmation, "Confirmación de la nueva contraseña", class: "col-md-2 control-label"
        .col-md-8
          = f.password_field :password_confirmation, :autocomplete => "off", placeholder: "Confirmación de la nueva contraseña", class: "form-control"
      .form-group
        = f.label :current_password, "Contraseña vigente (necesitamos su contraseña actual para guardar los cambios)", class: "col-md-2 control-label"
        .col-md-8
          = f.password_field :current_password, :autocomplete => "off", placeholder: "Nueva Contraseña", class: "form-control"
      .form-group
        .col-md-6.col-md-offset-3
          = f.submit class: "btn btn-primary btn-block"