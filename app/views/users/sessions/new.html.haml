.row.common-title
	.col-md-12
		%h1
			%span
				%br
#new_logo.row
	=image_tag "long_logo.png"
= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {role: "form", class: "form-signin"}) do |f|
	%h2.form-signin-heading
		Iniciar sesión
	= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Correo"
	= f.password_field :password, class: "form-control", placeholder: "Contraseña"

	- if devise_mapping.rememberable?
		.form-signin-field-part
			= f.check_box :remember_me 
			= f.label :remember_me, "Recuerdame", class: "checkbox"

	= f.submit "Iniciar sesión", class: "btn btn-lg btn-block"

=content_for :scripts do
	:javascript
		$(document).ready(function(){
			$('body').css('padding-top', '0px');
		});

= content_for :previous_image do
	#big_image_container.row
		#report_image_bg.col-md-12.col-sm-12.col-xs.12
			= image_tag "new_bg.jpg"