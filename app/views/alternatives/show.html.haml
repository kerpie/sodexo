.row
	.col-md-5.col-sm-6.col-xs-12
		%h1.model-title
			Alternativa registrada

- unless notice.nil?
	.row
		.col-xs-12.col-sm-6.col-sm-3.col-md-6.col-md-offset-3.alert.alert-success
			%p#notice
				= content_tag :strong, notice

.row
	.col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1
		.page-header
			%h1
				Datos de la alternativa registrada
		.panel.panel-info
			.panel-heading
				Nombre
			.panel-body
				= @alternative.name
		.panel.panel-info
			.panel-heading
				Pregunta
			.panel-body
				= @alternative.question.title

.row
	.col-md-3.col-md-offset-2.col-sm-5.col-sm-offset-1.col-xs-12
		= link_to 'Editar', edit_alternative_path(@alternative), class: "btn btn-default btn-block"
	.col-md-3.col-md-offset-2.col-sm-5.col-sm-offset-1.col-xs-12
		= link_to 'Volver', alternatives_path, class: "btn btn-primary btn-block"