.row
  .col-md-5.col-sm-6.col-xs-12
    %h1.model-title
      Listado de alternativas

.row
  .table-responsive.col-md-12.col-sm-12.col-xs-12
    %table.table.table-hover.table-condensed
      %thead
        %tr
          %th
            Pregunta
          %th
            Nombre de la alternativa
          %th{ colspan: "2" }
            Opciones
      %tbody
        - @alternatives.each do |alternative|
          %tr
            %td
              = link_to alternative.question.title, alternative
            %td
              = alternative.name
            %td
              = link_to 'Editar', edit_alternative_path(alternative), class: "btn btn-warning btn-xs"
            %td
              = link_to 'Eliminar', alternative, method: :delete, data: { confirm: 'Esta operación es irreversible ¿Está seguro de querer continuar?' }, class: "btn btn-danger btn-xs"
    
.row
  .col-md-6.col-md-offset-3.col-sm-12.col-xs-12
    = link_to 'Nueva alternativa', new_alternative_path, class: "btn btn-primary btn-block"