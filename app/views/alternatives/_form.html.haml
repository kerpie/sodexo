.row
  .col-xs-12.col-sm-12.col-md-12
    = form_for(@alternative, html: {class: "form-horizontal", role: :form}) do |f|
      - if @alternative.errors.any?
        .error_explanation
          %h2
            Corrige los siguientes errores para continuar:
          %ul
            - @alternative.errors.full_messages.each do |msg|
              %li
                = msg
      .form-group
        = f.label :name, "Nombre:", class: "col-md-2 control-label"
        .col-md-6
          = f.text_field :name, class: "form-control", placeholder: "Alternativa"
      .form-group
        = f.label :question_id, "Pregunta: ", class: "col-md-2 control-label"
        .col-md-6
          = f.collection_select :question_id, Question.all, :id, :title, {} , class: "form-control"
      .form-group
        .col-md-6.col-md-offset-3
          = f.submit class: "btn btn-primary btn-block"