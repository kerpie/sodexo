.row
  .col-xs-12.col-sm-12.col-md-12
    = form_for(@category, html: {class: "form-horizontal", role: :form}) do |f|
      - if @category.errors.any?
        .error_explanation
          %h2
            Corrige los siguientes errores para continuar:
          %ul
            - @category.errors.full_messages.each do |msg|
              %li
                = msg
      .form-group
        = f.label :name, "Nombre:", class: "col-md-2 control-label"
        .col-md-8
          = f.text_field :name, class: "form-control", placeholder: "Nombre de la categor√≠a"
      .form-group
        .col-md-6.col-md-offset-3
          = f.submit class: "btn btn-primary btn-block"
